<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#ABF1C57B"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="124dp" />

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Weather Tracker"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        app:srcCompat="@drawable/logopotentially" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp" />

    <TextView
        android:id="@+id/txtMyName"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Michael Herring"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <TextView
        android:id="@+id/txtStudentNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="ST10434179"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="28dp" />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="216dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#20A5B6"
        android:text="Get Started"
        android:textSize="22sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#000000"
        android:text="Exit"
        android:textSize="18sp" />
</LinearLayout>